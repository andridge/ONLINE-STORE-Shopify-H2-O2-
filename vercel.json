{
  "version": 2,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/app/$1" }
  ],
  "builds": [
    {
      "src": "server.js",
      "use": "@remix-run/dev/server-build"
    },
    {
      "src": "app/**",
      "use": "@vercel/static",
      "config": { "basePath": "dist/client" }
    },
    {
      "src": "./server",
      "use": "@shopify/hydrogen",
      "config": { "entry": "./server" }
    },
    {
      "src": "./build.css",
      "use": "npm:build:css",
      "config": { "entry": "./build.css" }
    }
  ]
}
