{
    "builds": [
      { "src": "package.json", "use": "@vercel/node" },
      { "src": ".vercel_build_output/**", "use": "@vercel/static" }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html",
        "headers": {
          "cache-control": "public, max-age=31536000, immutable"
        }
      }
    ],
    "version": 2,
    "env": {
      "NODE_ENV": "production"
    },
    "functions": { "api/**/*": { "memory": 512, "maxDuration": 10 } },
    "framework": {
      "name": "@remix-run/vercel",
      "buildCommand": "npm run build",
      "outputDirectory": ".vercel_build_output"
    }
  }
  