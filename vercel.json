{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    {
      "src": "app/**/*.{js,jsx}",
      "use": "@remix-run/dev"
    },
    {
      "src": "./server",
      "use": "@remix-run/dev",
      "config": { "basePath": "dist/worker", "entry": "./server" }
    },
    {
      "src": "./build.css",
      "use": "npm:build:css",
      "config": { "entry": "./build.css" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}
