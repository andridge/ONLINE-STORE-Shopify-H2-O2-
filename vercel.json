{
  "version": 2,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "builds": [
    { "src": "server.js", "use": "npm:@remix-run" },
    {
      "src": "app/**",  
      "use": "@vercel/static",
      "config": { "basePath": "dist/client" }
    },
    {
      "src": "./server",
      "use": "npm:@remix-run",
      "config": { "basePath": "dist/worker", "entry": "./server" }
    },
    {
      "src": "./build.css",
      "use": "npm:build:css",
      "config": { "entry": "./build.css" }
    }
  ]

}