    "@shopify/hydrogen": "^2023.1.6",
    "@shopify/remix-oxygen": "^1.0.4",
    "autoprefixer": "^10.4.14",
    "axios": "^0.24.0",
    "concurrently": "8.0.1",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "mpesa-api": "^3.0.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
